{
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "es6": true
    },
    "globals": {
        "APP_PATH": true,
        "ROOT_PATH": true,
        "APP_DEBUG": true,
        "JikeJs": true
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": "off",
        "no-console": "off",
        "no-unused-vars": "off",
        "no-unreachable": "off",
        "no-redeclare": "warn"
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true,
            "modules": true
        }
    }
}